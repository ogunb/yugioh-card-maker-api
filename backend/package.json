{
    "name": "yu-gi-oh-card-generator",
    "version": "1.0.0",
    "description": "Backend node.js application with Typescript for Yu-Gi-Oh Card Generator, following Clean Architecture principles.",
    "private": true,
    "main": "./src/index.ts",
    "keywords": [],
    "author": "Og√ºn Babacan <babacanogun@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "rimraf dist && tsc",
        "serve": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run serve:ts\" \"npm run serve:node\"",
        "serve:node": "nodemon dist/index.js",
        "serve:ts": "tsc -w",
        "debug": "npm run build && npm run debug:watch",
        "debug:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run serve:ts\" \"npm run serve:node\"",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "concurrently": "^5.0.2",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/express": "^4.17.2",
        "@types/uuid": "^3.4.6",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "nodemon": "^2.0.2",
        "rimraf": "^3.0.0",
        "uuid": "^3.4.0"
    }
}
